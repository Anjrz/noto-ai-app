<LoginScreen>:
    name: 'login'
    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 420
            height: 480
            spacing: 32
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas.before:
                Color:
                    rgba: (1, 1, 1, 0.98) if app.bg_color == [0.96, 0.98, 1, 1] else (0.15, 0.18, 0.21, 1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [40]

            Label:
                text: "Login to Noto.ai"
                font_size: 32
                bold: True
                color: app.accent_color
                size_hint_y: None
                height: 60

            TextInput:
                id: username
                hint_text: "Username or Email"
                font_size: 22
                size_hint_y: None
                height: 58
                padding: 18, 18, 18, 18
                background_normal: ''
                background_active: ''
                background_color: (0.94, 0.96, 1, 1) if app.bg_color == [0.96, 0.98, 1, 1] else (0.22, 0.24, 0.27, 1)
                foreground_color: app.text_color
                multiline: False
                cursor_color: app.accent_color
                radius: [24]

            TextInput:
                id: password
                hint_text: "Password"
                font_size: 22
                size_hint_y: None
                height: 58
                padding: 18, 18, 18, 18
                password: True
                background_normal: ''
                background_active: ''
                background_color: (0.94, 0.96, 1, 1) if app.bg_color == [0.96, 0.98, 1, 1] else (0.22, 0.24, 0.27, 1)
                foreground_color: app.text_color
                multiline: False
                cursor_color: app.accent_color
                radius: [24]

            Animated3DButton:
                text: "Login"
                size_hint_y: None
                height: 54
                font_size: 24
                on_press: app.root.current = 'main'

            Animated3DButton:
                text: "Back"
                size_hint_y: None
                height: 54
                font_size: 24
                on_press: app.root.current = 'main'
