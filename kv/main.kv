<MainAppScreen>:
    MainContent:
        id: main_content

<Animated3DButton@Button>:
    scale: 1.0
    shadow_offset: 12
    shadow_blur: 36
    shadow_alpha: 0.28
    background_normal: ''
    background_color: 0,0,0,0
    padding: 22, 22
    font_size: 24
    color: 1, 1, 1, 1
    bold: True
    canvas.before:
        Color:
            rgba: 0, 0, 0, self.shadow_alpha
        RoundedRectangle:
            pos: self.x, self.y - self.shadow_offset
            size: self.width, self.height
            radius: [34]
        PushMatrix
        Scale:
            origin: self.center
            x: self.scale
            y: self.scale
            z: 1
        Color:
            rgba: (0.10, 0.45, 0.80, 1) if self.state == 'normal' else (0.08, 0.35, 0.65, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [34]
        PopMatrix

    on_press:
        app.root.get_screen('main').ids.main_content.animate_button(self)
    on_release:
        app.root.get_screen('main').ids.main_content.animate_button_release(self)

<LoadingSpinner@BoxLayout>:
    orientation: 'horizontal'
    size_hint: None, None
    size: 54, 54
    opacity: 0
    canvas:
        Color:
            rgba: 0.2, 0.6, 0.86, 0.2
        Ellipse:
            pos: self.center_x-24, self.center_y-24
            size: 48, 48
    Image:
        source: 'assets/icons/spinner.gif'
        size_hint: None, None
        size: 48, 48
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        anim_delay: 0.05

<MainContent>:
    name: 'main'
    FloatLayout:

        Video:
            source: 'assets/backgrounds/rain.mp4'
            state: 'play'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size: self.size
            pos: self.pos
            volume: 0

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 900
            height: self.minimum_height
            pos_hint: {'center_x': 0.5, 'center_y': 0.49}
            padding: 40
            spacing: 18
            canvas.before:
                Color:
                    rgba: app.bg_color[0], app.bg_color[1], app.bg_color[2], 0.85  # Semi-transparent background
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [40]
                Color:
                    rgba: 0, 0, 0, 0.10
                RoundedRectangle:
                    pos: self.x, self.y - 14
                    size: self.width, self.height
                    radius: [40]

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 110
                spacing: 18

                Image:
                    source: 'assets/icons/app_icon_72.png'
                    size_hint: None, None
                    size: 80, 80

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 6
                    Label:
                        text: "Noto.ai"
                        font_size: 44
                        bold: True
                        color: app.text_color
                        size_hint_y: None
                        height: 54

                    Label:
                        text: "Your Study Toolkit"
                        font_size: 28
                        color: app.text_color
                        bold: False
                        size_hint_y: None
                        height: 40

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 58
                spacing: 14

                Animated3DDropdownButton:
                    id: mode_dropdown
                    text: root.ids.mode_dropdown.selected_option if hasattr(root.ids.mode_dropdown, 'selected_option') else "Choose Action"
                    size_hint_x: 0.55
                    font_size: 22
                    disabled: True
                    on_selected_option: root.on_mode_selected(self, self.selected_option)

                Animated3DButton:
                    id: upload_btn
                    text: "Upload File"
                    size_hint_x: 0.35
                    font_size: 22
                    on_press: root.on_upload_button_press(self)

                Animated3DButton:
                    id: theme_toggle_btn
                    size_hint_x: None
                    width: 54
                    text: ""
                    background_normal: ''
                    background_color: 0,0,0,0
                    on_press: root.toggle_dark_mode()
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            source: 'assets/icons/sun.png' if app.bg_color == [0.96, 0.98, 1, 1] else 'assets/icons/moon.png'
                            pos: self.x + (self.width-36)/2, self.y + (self.height-36)/2
                            size: 36, 36

            BoxLayout:
                id: summary_length_box
                orientation: 'horizontal'
                size_hint_y: None
                height: 54
                spacing: 14
                opacity: 1 if root.ask_box_visible else 0
                disabled: not root.ask_box_visible

                Animated3DButton:
                    text: "Short"
                    on_press: root.set_summary_length("Short")
                    canvas.before:
                        Color:
                            rgba: (0.18, 0.7, 0.3, 1) if root.summary_length == "Short" else (0.10, 0.45, 0.80, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [34]

                Animated3DButton:
                    text: "Medium"
                    on_press: root.set_summary_length("Medium")
                    canvas.before:
                        Color:
                            rgba: (0.18, 0.7, 0.3, 1) if root.summary_length == "Medium" else (0.10, 0.45, 0.80, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [34]

                Animated3DButton:
                    text: "Long"
                    on_press: root.set_summary_length("Long")
                    canvas.before:
                        Color:
                            rgba: (0.18, 0.7, 0.3, 1) if root.summary_length == "Long" else (0.10, 0.45, 0.80, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [34]


            Animated3DButton:
                id: execute_btn
                text: "Execute"
                size_hint_y: None
                height: 54
                font_size: 22
                disabled: True
                on_press: root.on_execute_button_press(self)

            Animated3DButton:
                id: copy_btn
                text: "Copy Notes to Clipboard"
                size_hint_y: None
                height: 46
                opacity: 0
                disabled: True
                font_size: 20
                on_press: root.animate_button(self); root.copy_notes_to_clipboard()

            AnchorLayout:
                size_hint_y: None
                height: 54
                anchor_x: 'center'
                LoadingSpinner:
                    id: loading_spinner
                    size_hint: None, None
                    size: 54, 54

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 280
                padding: 0
                spacing: 0

                canvas.before:
                    Color:
                        rgba: 0.98, 0.98, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [16]
                    Color:
                        rgba: 0, 0, 0, 0.06
                    RoundedRectangle:
                        pos: self.x, self.y - 4
                        size: self.width, self.height
                        radius: [16]

                ScrollView:
                    bar_width: 10
                    do_scroll_x: False
                    do_scroll_y: True
                    size_hint: 1, 1

                    TextInput:
                        id: notes_label
                        text: ""
                        font_size: root.font_size if hasattr(root, 'font_size') else 20
                        padding: 24, 24, 24, 24
                        background_normal: ''
                        background_active: ''
                        background_color: 0,0,0,0
                        foreground_color: (0.1, 0.1, 0.1, 1) if app.bg_color == [0.96, 0.98, 1, 1] else (1,1,1,1)
                        cursor_color: app.accent_color
                        size_hint_y: None
                        height: max(self.minimum_height, 280)
                        multiline: True
                        readonly: True
                        cursor_blink: False
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'top'
                        on_focus:
                            if self.focus: self.select_all()

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 24
                    padding: 10, 0

                    Widget:
                        size_hint_x: 1

                    Label:
                        text: f"{len(notes_label.text.split())} words, {len(notes_label.text)} chars"
                        font_size: 14
                        color: 0.4, 0.4, 0.4, 1
                        size_hint_x: None
                        width: 180

            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: 160
                opacity: 1 if root.ask_box_visible else 0
                disabled: not root.ask_box_visible
                spacing: 0

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 52
                    spacing: 10
                    padding: 0, 0, 0, 0

                    TextInput:
                        id: chat_input
                        hint_text: "Ask a question about your notes..."
                        font_size: 18
                        size_hint_x: 0.7
                        multiline: False
                        background_color: app.bg_color
                        foreground_color: app.text_color
                        cursor_color: app.accent_color
                        padding: 12, 10, 12, 10

                    Animated3DButton:
                        id: ask_btn
                        text: "Ask"
                        size_hint_x: 0.3
                        font_size: 18
                        on_press: root.on_ask_question()

                ScrollView:
                    size_hint_y: None
                    height: 120
                    bar_width: 10
                    do_scroll_x: False
                    do_scroll_y: True

                    TextInput:
                        id: chat_answer
                        text: ""
                        font_size: root.font_size if hasattr(root, 'font_size') else 20
                        padding: 24, 24, 24, 24
                        background_normal: ''
                        background_active: ''
                        background_color: 0,0,0,0
                        foreground_color: (0.1, 0.1, 0.1, 1) if app.bg_color == [0.96, 0.98, 1, 1] else (1,1,1,1)
                        cursor_color: app.accent_color
                        size_hint_y: None
                        height: max(self.minimum_height, 120)
                        multiline: True
                        readonly: True
                        cursor_blink: False
                        text_size: self.width, None
                        halign: 'left'
                        valign: 'top'
                        on_focus:
                            if self.focus: self.select_all()
