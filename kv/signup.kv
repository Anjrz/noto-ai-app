<SignUpScreen>:
    name: 'signup'
    show_password: False
    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 400
            height: 420
            spacing: 24
            padding: 32

            canvas.before:
                Color:
                    rgba: (1,1,1,0.98) if app.bg_color == [0.96,0.98,1,1] else (0.13,0.14,0.17,1)
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [24]
                Color:
                    rgba: 0,0,0,0.12
                RoundedRectangle:
                    pos: self.x, self.y - 8
                    size: self.width, self.height
                    radius: [24]

            Label:
                text: "Sign Up"
                font_size: 32
                bold: True
                color: app.accent_color
                size_hint_y: None
                height: 54

            BoxLayout:
                orientation: 'vertical'
                spacing: 16

                TextInput:
                    id: new_username
                    hint_text: "Username"
                    font_size: 20
                    size_hint_y: None
                    height: 48
                    padding: 16, 12, 16, 12
                    background_normal: ''
                    background_active: ''
                    background_color: 1,1,1,1
                    foreground_color: app.text_color
                    multiline: False
                    focus_next: new_password
                    on_text_validate: new_password.focus = True
                    cursor_color: app.accent_color
                    canvas.after:
                        Color:
                            rgba: 0.75, 0.75, 0.75, 1
                        Line:
                            width: 1.1
                            rectangle: (self.x, self.y, self.width, self.height)

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: 48

                    TextInput:
                        id: new_password
                        hint_text: "Password"
                        font_size: 20
                        size_hint_x: 1
                        padding: [16, 12, 48, 12]  # Adjusted for icon space
                        password: not root.show_password
                        background_normal: ''
                        background_active: ''
                        background_color: 1,1,1,1
                        foreground_color: app.text_color
                        multiline: False
                        focus_next: None
                        on_text_validate: app.signup_user(new_username.text, new_password.text)
                        cursor_color: app.accent_color
                        canvas.after:
                            Color:
                                rgba: 0.75, 0.75, 0.75, 1
                            Line:
                                width: 1.1
                                rectangle: (self.x, self.y, self.width, self.height)

                    Button:
                        size_hint_x: None
                        width: 40
                        height: 40
                        background_normal: ''
                        background_down: ''
                        background_color: 0, 0, 0, 0
                        on_release: root.show_password = not root.show_password
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.9, 0.9, 1) if self.state == 'down' else (1, 1, 1, 1)
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10]
                                source: 'assets/icons/eye.png' if not root.show_password else 'assets/icons/eye-off.png'

            Label:
                id: signup_error
                text: ""
                color: 1, 0, 0, 1
                font_size: 16
                size_hint_y: None
                height: 20

            Animated3DButton:
                text: "Sign Up"
                size_hint_y: None
                height: 46
                font_size: 20
                on_press: app.signup_user(new_username.text, new_password.text)

            Button:
                text: "Back to Login"
                size_hint_y: None
                height: 46
                font_size: 20
                background_color: 0,0,0,0
                color: app.accent_color
                on_press: app.root.current = 'login'
