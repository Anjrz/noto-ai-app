<SplashScreen>:
    canvas.before:
        Color:
            rgba: (0.96, 0.98, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 40
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Image:
            source: 'assets/icons/app_icon_72.png'
            size_hint: None, None
            size: 180, 180
            pos_hint: {'center_x': 0.5}

        Label:
            text: "Noto.ai"
            font_size: 48
            bold: True
            color: (0.08, 0.10, 0.20, 1)
            size_hint_y: None
            height: 60

        BoxLayout:
            size_hint_y: None
            height: 80
            padding: [0, 20, 0, 0]

            Image:
                source: 'assets/icons/spinner.gif'
                size_hint: None, None
                size: 60, 60
                pos_hint: {'center_x': 0.5}
                anim_delay: 0.05
