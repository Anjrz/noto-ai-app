<SplashScreen>:
    canvas.before:
        Color:
            rgba: app.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        # Shift the BoxLayout a bit upwards by using pos_hint
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            width: 240
            height: 320
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}  # 0.6 shifts up from exact center
            spacing: 0

            Image:
                source: 'assets/icons/app_icon_72.png'
                size_hint: None, None
                size: 180, 180
                pos_hint: {'center_x': 0.5}

            Label:
                text: "Noto.ai"
                font_size: 32
                bold: True
                color: app.text_color
                size_hint_y: None
                height: 40
                halign: 'center'
                valign: 'middle'

            Widget:
                size_hint_y: None
                height: 24  # gap between icon and spinner

            Image:
                source: 'assets/icons/spinner.gif'
                size_hint: None, None
                size: 60, 60
                pos_hint: {'center_x': 0.5}
                anim_delay: 0.05

            Widget:
                size_hint_y: None
                height: 10

            
